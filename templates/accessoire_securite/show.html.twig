        </table>

        <div class="d-flex justify-content-between align-items-center">
            <a href="{{ path('app_accessoire_securite_index') }}"
               class="btn btn-sm btn-outline-primary">
                Retour à la liste
            </a>
            <a href="{{ path('app_accessoire_securite_edit', {'id': accessoire_securite.id}) }}"
